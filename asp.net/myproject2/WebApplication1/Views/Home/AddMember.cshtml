@model WebApplication1.Models.Member;

<form asp-action="TOAddMember" style="margin-left:10px;">
    <h1>註冊會員</h1>
    <div>
        <span style="color:red">@ViewBag.Msg</span>
    </div>
    <input type="hidden" asp-for="Id" value="1"/>
    <div class="form-group" style="width:200px">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <small id="emailHelp" class="form-text text-muted">請輸入英數字</small>
    </div>
    <div class="form-group" style="width:200px">
        <label asp-for="Account"></label>
        <input type="text" asp-for="Account" class="form-control" placeholder="輸入帳號" />
        <span asp-validation-for="Account" class="text-danger"></span>
        <br/>
    </div>
    <div class="form-group" style="width:200px">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="text" class="form-control" placeholder="輸入密碼" />
        <span asp-validation-for="Account" class="text-danger"></span>
        <br/>
    </div>
    
    <div class="form-group" style="width:200px">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" placeholder="輸入Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
        <br />
    </div>
    <input type="submit" class="btn btn-primary" value="註冊" />
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}