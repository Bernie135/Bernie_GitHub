@model  List<Prodect>;

@foreach (var p in Model)
{
    <div>
        <img src="~/lib/data/@p.FileId" width="100" height="100" /><br />
        <a class="" asp-area="" asp-controller="Product" asp-action="GetProduct" asp-route-id="@p.Id">@($"{p.Id} - {p.Name} - {p.Price}")</a>
        <br/>
        <a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@p.Id">修改</a>
        <a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@p.Id">刪除</a>
    </div>
}
